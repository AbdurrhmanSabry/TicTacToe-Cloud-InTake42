<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #6E8897;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainRoom.MainRoomController">
   <left>
      <BorderPane prefHeight="633.0" prefWidth="368.0" BorderPane.alignment="CENTER">
         <top>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="47.0" prefWidth="368.0" style="-fx-background-color: A0B2BE;" text="Lis of Players" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <TextArea fx:id="playersList" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </left>
   <center>
      <AnchorPane prefHeight="688.0" prefWidth="378.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="multiBTN" layoutX="41.0" layoutY="229.0" mnemonicParsing="false" onAction="#PlayMulti" prefHeight="73.0" prefWidth="305.0" style="-fx-background-color: #A0B2BE;" text="Play with a friend" />
            <Button fx:id="signleBTN" layoutX="41.0" layoutY="116.0" mnemonicParsing="false" onAction="#PlaySingle" prefHeight="81.0" prefWidth="305.0" style="-fx-background-color: #A0B2BE;" text="Play vs Computer" />
            <Button fx:id="showBTN" layoutX="41.0" layoutY="336.0" mnemonicParsing="false" onAction="#ShowPlayers" prefHeight="81.0" prefWidth="305.0" style="-fx-background-color: #A0B2BE;" text="Show list of players" />
         </children>
      </AnchorPane>
   </center>
   <right>
      <BorderPane prefHeight="682.0" prefWidth="405.0" BorderPane.alignment="CENTER">
         <center>
            <TextArea fx:id="globalchat" editable="false" prefHeight="595.0" prefWidth="405.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </TextArea>
         </center>
         <top>
            <Label alignment="CENTER" prefHeight="32.0" prefWidth="440.0" style="-fx-background-color: #A0B2BE;" text="Global Chat" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <FlowPane hgap="10.0" prefHeight="49.0" prefWidth="405.0" BorderPane.alignment="CENTER">
               <children>
                  <Label prefHeight="42.0" prefWidth="105.0" text="Send a Message" textFill="#d3d0cb">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                  <TextField fx:id="msg" prefHeight="25.0" prefWidth="185.0" />
                  <Button fx:id="sendmsg" defaultButton="true" mnemonicParsing="false" onAction="#SendingMSG" prefHeight="25.0" prefWidth="89.0" text="Send" />
               </children>
            </FlowPane>
         </bottom>
      </BorderPane>
   </right>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
